<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="libraryPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.library.model.Auteur</class>
        <class>com.library.model.Livre</class>
        <class>com.library.model.Lecteur</class>
        <class>com.library.model.Emprunt</class>
        <class>com.library.model.Utilisateur</class>
        <class>com.library.model.Reservation</class>

        <!-- Exclure les classes non mappées pour éviter les avertissements -->
        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <!-- Configuration JDBC - MySQL Database -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/smartlibrary?useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- Hibernate Settings -->
          <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
          <!-- update = créer/mettre à jour les tables automatiquement -->
          <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Batch processing -->
            <property name="hibernate.jdbc.batch_size" value="50"/>
            <property name="hibernate.order_inserts" value="true"/>
            <property name="hibernate.order_updates" value="true"/>
        </properties>
    </persistence-unit>
</persistence>